

<p id="notice"><%= notice %></p>

<h1>Coupons</h1>

<div class="table-responsive">
<table class="table table-hover">  <thead>
  <thead>
    <tr>
      <th>Code</th>
      <th>Discount</th>
      <th>ValidFrom</th>
      <th>ValidUntil</th>      
      <th>Redeemed</th>     
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @coupons.each do |coupon| %>
    <tr>
      <td><%= coupon.code %></td>
      <td><%= coupon_discount(coupon) %></td>
      <td><%= short_date(coupon.valid_from) %></td>
      <td><%= valid_until(coupon) %></td>
      <td><%= redeemed(coupon) %></td>
    
       
        <td> <%= link_to  edit_coupon_path(coupon), class: "btn btn-primary" do %>
              <i class="glyphicon glyphicon-edit"></i>
           <% end %> 
    <%= link_to  coupon,class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } do %>
              <i class="glyphicon glyphicon-trash"></i>
           <% end %>       </td>
      </tr>
    <% end %>
  </tbody>
</table>
<div>
<br>
<%= link_to 'Create Coupon', new_coupon_path ,:class => "btn btn-success"%>

    